<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:id="@+id/imgBackground"
            app:riv_corner_radius_bottom_right="70dp"
            android:padding="2dp"
            android:background="@color/colorGrey"
            app:riv_corner_radius_bottom_left="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_background_thucdon"
            app:riv_mutate_background="true"
            android:layout_height="270dp"/>
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/imgBackground"
            android:layout_centerHorizontal="true"
            android:id="@+id/imgAdd"
            android:layout_marginBottom="-50dp"
            app:riv_corner_radius="50dp"
            android:background="#000"
            app:riv_mutate_background="true"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_food_add" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:layout_below="@+id/imgAdd"
            android:layout_marginTop="50dp"
            android:padding="14dp"
            android:layout_gravity="center"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="true"
            >
            <!--Row1-->
            <!--Colums 1-->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#fff"
                android:layout_rowWeight="0"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_columnWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="80dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/imageFoodMoring"
                        android:src="@drawable/ic_food_morning"
                        android:layout_height="80dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/txt_morning"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--Colums 1-->
            <!--Row2-->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_rowWeight="0"
                android:layout_columnWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="80dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/imgFoodLunch"
                        android:src="@drawable/ic_food_afternoon"
                        android:layout_height="80dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:id="@+id/txt_lunch"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--Row2-->
            <!--Colum 1-->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_rowWeight="0"
                android:layout_columnWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/imgFoodDinner"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:src="@drawable/ic_food_night"
                        android:layout_height="80dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#000"
                        android:id="@+id/txt_dinner"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--Colum 2-->
            <!--Row2-->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:layout_rowWeight="0"
                android:layout_columnWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/imgFoodOffer"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:src="@drawable/ic_food"
                        android:layout_height="80dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="おすすめ"
                        android:textColor="#000"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--Colum 1-->

            <!--Row3-->

        </GridLayout>
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>